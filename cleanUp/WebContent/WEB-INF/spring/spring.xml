<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/mvc 
    http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd
    http://www.springframework.org/schema/beans 
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context 
    http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<!-- LOCAL ONDE O SPRING VASCULHARÁ TODOS OS CONTROLADORES -->
	<context:component-scan base-package="br.com.cleanUp.controllers"/>
	
	<!-- 	INFORMA AO SPRING QUE OS CONTROLLERS SERÃO CONFIGURADOS VIA ANNOTATION -->
	<mvc:annotation-driven/>
	
	<!-- 	CENA DO PRÓXIMO EPISÓDIO -->
	<!-- 	<mvc:default-servlet-handler/> -->
	
	<!-- 	INFORMA AO SPRING ONDE FICARÃO NOSSAS PAGINAS JSP -->
	<bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/views/"/>
	    <property name="suffix" value=".jsp"/>
	</bean>


</beans>